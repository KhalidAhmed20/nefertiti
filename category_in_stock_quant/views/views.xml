<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_quant_add_cost_id" model="ir.ui.view">
            <field name="name">stock.quant.add.cost</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="cost_cost"/>
                </xpath>

            </field>
        </record>
        <record id="stock_quant_add_cost_form_id" model="ir.ui.view">
            <field name="name">stock.quant.add.cost.form</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_form"/>
            <field name="arch" type="xml">
<!--                It has been edited to be upgraded to 17-->
                <xpath expr="//field[@name='owner_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="cost_cost"/>
                    <field name="value"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <report
                id="id_time_of_report"
                model="hr.leave"
                report_type="qweb-pdf"
                string="طلب اجازة / اذن"
                name="reports_nefertity.id_report_template_time_of"
                file="reports_nefertity.id_report_template_time_of"
        />


        <template id="id_report_template_time_of">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <center>
                                <h2>
                                    بيانات الموظف
                                </h2>
                            </center>
                            <table class="table table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.employee_id"/></td>
                                        <td class="text-right" width="15%">
                                            : اسم الموظف
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.employee_id.emp_code"/></td>
                                        <td class="text-right">
                                            : كود الموظف
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.employee_id.department_id.name"/></td>
                                        <td class="text-right">
                                            : القسم
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.employee_id.job_id.name"/></td>
                                        <td class="text-right">
                                            : الوظيفة
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                            <center>
                                <h2>
                                    بيانات الطلب
                                </h2>
                            </center>
                            <table class="table table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.holiday_status_id"/></td>
                                        <td class="text-right" width="15%">
                                            النوع :
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.request_date_from"/></td>
                                        <td class="text-right">
                                            : من
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.request_date_to"/></td>
                                        <td class="text-right">
                                            : الى
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.number_of_days"/></td>
                                        <td class="text-right">
                                            : المدة
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><span t-field="doc.name"/></td>
                                        <td class="text-right">
                                            : الوصف
                                            <br>
                                            </br>
                                            <br>
                                            </br>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                            <br>
                            </br>
                            <br>
                            </br>
                            <br>
                            </br>
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td class="text-right">توقيع الموظف</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">توقيع المدير</td>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
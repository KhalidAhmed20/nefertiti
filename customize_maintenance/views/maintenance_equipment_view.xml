<odoo>
    <record id="inherit_view_form_stock_picking" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="maintenance_request_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_maintenance_equipment_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.form.inherit</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="inside">
                <field name="code"/>
                <field name="machine_number"/>
            </xpath>
            <xpath expr="//notebook/page[3]" position="after">
                <page string="قطع الغيار">
                    <field name="maintenance_equipment_ids">
                        <tree editable="bottom">
                            <field name="product_id" options="{'create': True}"/>
                            <field name="product_qty"/>
                            <field name="unit_of_measure"/>
                            <field name="cost"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="maintenance_request_view_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.request.view.form</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="code"/>
                <field name="machine_number"/>
                <field name="is_repaired" invisible="1"/>
                <field name="in_progres" invisible="1"/>
                <field name="is_create" invisible="1"/>
                <field name="stock_picking_id" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='archive_equipment_request']" position="after">
                <button name="repaired" type="object" string="Repaired" class="btn-primary"
                        invisible="stage_id != 2"/>
                <button name="in_progress" type="object" string="In Progress" class="btn-primary"
                        invisible="in_progres != True"/>
                <button name="create_request" type="object" string="Create Request" class="btn-primary"
                        invisible="is_create != False"/>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="attributes"  invisible="rchive == True" readonly="is_repaired == True">

                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="after">
                <notebook>
                    <page string="قطع الغيار">
                        <field name="maintenance_equipment_ids">
                            <tree editable="bottom">
                                <field name="product_id" options="{'create': True}"/>
                                <field name="product_qty"/>
                                <field name="quantity_replaced"/>
                                <field name="stock_from_domain" widget="many2many_tags" invisible="1"/>
                                <field name="unit_of_measure"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="seq_maintenance_sequence" model="ir.sequence">
        <field name="name">Maintenance Sequence</field>
        <field name="code">maintenance.request</field>
        <field name="prefix">2024/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
    <record id="view_maintenance_equipment_line_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.line.form</field>
        <field name="model">maintenance.equipment.line</field>
        <field name="arch" type="xml">
            <form string="خطوط المعدات " create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="equipment_sequence"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="quantity_replaced"/>
                            <field name="product_location"/>
                            <field name="unit_of_measure"/>
                            <field name="reserved"/>
                            <field name="maintenance_equipment_id"/>
                        </group>
                        <group>
                            <field name="maintenance_request_id"/>
                            <field name="stock_from"/>
                            <field name="stock_to"/>
                            <field name="cost"/>
                            <field name="coast" string="التكلفة المستبدلة"/>
                        </group>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_maintenance_equipment_line_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.line.tree</field>
        <field name="model">maintenance.equipment.line</field>
        <field name="arch" type="xml">
            <tree string="خطوط المعدات " create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="equipment_sequence"/>
                <field name="coast"/>
            </tree>
        </field>
    </record>

    <record id="action_maintenance_equipment_line" model="ir.actions.act_window">
        <field name="name">خطوط المعدات</field>
        <field name="res_model">maintenance.equipment.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_maintenance_equipment_line_tree"/>
        <field name="domain">[('maintenance_request_id.stage_id','=',3)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new equipment line
            </p>
            <p>
                Add and manage equipment lines for maintenance requests.
            </p>
        </field>
    </record>
    <menuitem id="maintenance_menu" name="تفرير مفصل" parent="maintenance.maintenance_reporting"
              action="action_maintenance_equipment_line"/>

</odoo>
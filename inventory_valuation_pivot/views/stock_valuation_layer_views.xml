<odoo>
    <!-- Inherit the Tree View -->
    <record id="view_stock_valuation_layer_tree_inherit" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.inherit</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="location_id"/>
                <field name="categ_id"/>
            </xpath>
        </field>
    </record>

    <!-- Add Pivot View -->
    <record id="view_stock_valuation_layer_pivot" model="ir.ui.view">
        <field name="name">stock.valuation.layer.pivot</field>
        <field name="model">stock.valuation.layer</field>
        <field name="arch" type="xml">
            <pivot string="Stock Valuation">
                <field name="product_id" type="row"/>
                <field name="date" type="column"/>
                <field name="value" type="measure"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Modify the Action to Include Pivot View -->
    <record id="stock_valuation_layer_pivot_action" model="ir.actions.act_window">
        <field name="name">Stock Valuation Pivot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.valuation.layer</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="inventory_valuation_pivot.view_stock_valuation_layer_pivot"/>
        <field name="context">{'search_default_group_by_product_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There are no valuation layers. Valuation layers are created when some product moves should impact the valuation of the stock.
            </p>
        </field>
    </record>

    <!-- Add New Menu Item under Inventory Valuation -->
    <menuitem id="inventory_valuation_pivot_menu"
              name="Inventory Valuation Pivot"
              parent="stock.menu_warehouse_report"
              sequence="111"
              action="stock_valuation_layer_pivot_action"
    />
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_purchase_order_view_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="langu"/>
                </xpath>
            </field>
        </record>
        <record id="id_sale_order_inh_form_g" model="ir.ui.view">
            <field name="name">sale order inh form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="langu"/>
                </xpath>
            </field>
        </record>
        <record id="id_stock_picking_inh_form" model="ir.ui.view">
            <field name="name">stock picking inh form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="langu"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
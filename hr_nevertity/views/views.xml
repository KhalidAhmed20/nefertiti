<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_hr_employee_inherit_form" model="ir.ui.view">
            <field name="name">hr employee inherit form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page string="Employee Shifts" name="Shifts">
                        <field name="shift_name_ids">
                            <tree editable="bottom">
                                <field name="employee_id"/>
                                <field name="is_day_shift"/>
                                <field name="shift_name" required="True" string="Shift Name"/>
                                <field name="date_from" required="True"/>
                                <field name="date_to" required="True"/>
                                <field name="hour_from" required="True"/>
                                <field name="hour_to" required="True"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='Shifts']" position="after">
                    <page string="Fridays" name="Fridays">
                        <field name="fridays_ids">
                            <tree editable="bottom">
                                <field name="date_from" required="True"/>
                                <field name="date_to" required="True"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='Fridays']" position="after">
                    <page string="The Rest" name="fridays_ids">
                        <field name="the_rest_ids">
                            <tree editable="bottom">
                                <field name="date_from" required="True"/>
                                <field name="date_to" required="True"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="get_fin_product"
                            type="object"
                            string="Go Shifts"
                            class="oe_stat_button"
                            icon="fa-archive">
                    </button>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="the_coefficient"/>
                    <field name="co_officient_day_overtime"/>
                    <field name="co_officient_night_overtime"/>
                    <field name="rewards"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
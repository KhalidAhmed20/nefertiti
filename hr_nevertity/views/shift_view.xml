<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employee_shift_line_tree" model="ir.ui.view">
        <field name="name">employee shift line tree</field>
        <field name="model">employee.shift.line</field>
        <field name="arch" type="xml">
            <tree string="Employee Shift">
                <field name="employee_id"/>
                <field name="is_day_shift"/>
                <field name="shift_name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="hour_from"/>
                <field name="hour_to"/>
            </tree>
        </field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <record id="employee_menu_shift_action" model="ir.actions.act_window">
        <field name="name">Employee Shift</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.shift.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                Create New Employee Shift!
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>
    <menuitem id="employee_shift_root_menu" name="Employee Shift" parent="hr.menu_hr_root"
              action="employee_menu_shift_action" sequence="4"/>


</odoo>
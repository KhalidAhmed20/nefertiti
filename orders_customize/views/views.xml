<odoo>
    <data>

        <record id="sale_order_line_customize" model="ir.ui.view">
            <field name="name">sale.order.line.customize</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="product_size"/>
                    <field name="product_gram"/>
                    <field name="product_layers"/>
                    <field name="analytic_account_id"/>
                </xpath>

            </field>
        </record>

        <record id="sale_product_size_tree" model="ir.ui.view">
            <field name="name">sale.product_size.tree</field>
            <field name="model">sale.product_size</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_product_size_action" model="ir.actions.act_window">
            <field name="name">Product Size</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.product_size</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="sale_product_size_menu" name="Product Size" parent="sale.menu_sale_config"
                  action="sale_product_size_action"/>

        <record id="sale_product_gram_tree" model="ir.ui.view">
            <field name="name">sale.product_gram.tree</field>
            <field name="model">sale.product_gram</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_product_gram_action" model="ir.actions.act_window">
            <field name="name">Product Gram</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.product_gram</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="sale_product_gram_menu" name="Product Gram" parent="sale.menu_sale_config"
                  action="sale_product_gram_action"/>

        <record id="sale_product_layers_tree" model="ir.ui.view">
            <field name="name">sale.product_layers.tree</field>
            <field name="model">sale.product_layers</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_product_layers_action" model="ir.actions.act_window">
            <field name="name">Product layers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.product_layers</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="sale_product_layers_menu" name="Product layers" parent="sale.menu_sale_config"
                  action="sale_product_layers_action"/>

    </data>
</odoo>
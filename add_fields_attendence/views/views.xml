<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_attendance_tree_added_fields" model="ir.ui.view">
            <field name="name">view.attendance.tree.added.fields</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='worked_hours']" position="after">
                    <field name="actual_worked_hours" widget="float_time" force_save="1"/>
                    <field name="late" widget="float_time" force_save="1"/>
                    <field name="over_time" widget="float_time" force_save="1"/>
                    <field name="total_over_time" widget="float_time" force_save="1"/>
                    <field name="net_over_time" force_save="1"/>
                    <field name="is_day_shift" force_save="1"/>
                    <field name="early_sign_in" force_save="1"/>
                    <field name="early_leave" widget="float_time" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="date_from" force_save="1"/>
                    <field name="date_to" force_save="1"/>
                    <field name="hour_from" force_save="1"/>
                    <field name="hour_to" force_save="1"/>
                </xpath>
            </field>
        </record>
        <record id="id_ir_cron_check_challenge" model="ir.cron">
            <field name="name">Meshmesh</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.meshmesh()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>

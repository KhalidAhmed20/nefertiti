<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_lebor_timesheet_tree" model="ir.ui.view">
            <field name="name">lebor timesheet tree</field>
            <field name="model">lebor.timesheet</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="qty_done"/>
                </tree>
            </field>
        </record>
        <record id="id_lebor_timesheet_form" model="ir.ui.view">
            <field name="name">lebor timesheet form</field>
            <field name="model">lebor.timesheet</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                            <field name="qty_done"/>
                            <field name="manufactur_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Laborers">
                                <field name="lebor_timesheet_ids">
                                    <tree editable="bottom">
                                        <field name="employee_id"/>
                                        <field name="operating_hours"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="id_lebor_timesheet_search" model="ir.ui.view">
            <field name="name">lebor timesheet search</field>
            <field name="model">lebor.timesheet</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="qty_done"/>
                </search>
            </field>
        </record>
        <record id="id_lebor_timesheet_action" model="ir.actions.act_window">
            <field name="name">lebor timesheet action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lebor.timesheet</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
<!--        <menuitem id="id_lebor_timesheet_menu" name="ertyuio" parent="mrp.menu_mrp_manufacturing"-->
<!--                  action="id_lebor_timesheet_action" sequence="9"/>-->
    </data>
</odoo>
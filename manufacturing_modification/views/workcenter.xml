<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="id_mrp_workcenter_inherit_form" model="ir.ui.view">
            <field name="name">mrp workcenter inherit form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Laborers">
                        <field name="mrp_workcenter_ids">
                            <tree editable="bottom">
                                <field name="employee_id"/>
                                <field name="operating_hours"/>
                                <field name="hourly_cost"/>
                                <field name="total_cost"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='costs_hour']" position="attributes">
                    <attribute name="string">Total Coast</attribute>
                </xpath>
                <xpath expr="//field[@name='costs_hour']" position="after">
                    <field name="coast_per_hour"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
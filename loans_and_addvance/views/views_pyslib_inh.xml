<odoo>
    <data>

        <record model="ir.cron" id="id_get_total_loans">
            <field name="name">Total Loans</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="state">code</field>
            <field name="code">model.calculate_total_loans()</field>
        </record>
        <record model="ir.cron" id="id_get_total_advance">
            <field name="name">Total Advance</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_payslip"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="state">code</field>
            <field name="code">model.calculate_total_advance()</field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="id_hr_payslip_inherit_form" model="ir.ui.view">
            <field name="name">hr.payslip.inh</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <!-- Add your fields or attributes here -->
                    <page string="Loans" name="loans">
                        <field name="loans_line_ids" readonly="1" nolabel="1">
                            <tree>
                                <field name="name"/>
<!--                                <field name="employee_id"/>-->
<!--                                <field name="department_id"/>-->
                                <field name="amount" />
<!--                                sum="Total Amount" widget="monetary" optional="show"/>-->
<!--                                <field name="state"/>-->
                            </tree>
                        </field>
                        <group>
                            <group>

                            </group>
                            <group>
                                <field name="loans" string="Total Loans"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <!-- Add your fields or attributes here -->
                    <page string="Salary Advance" name="salary_advance">
                        <field name="salary_advance_ids" readonly="1" nolabel="1">
                            <tree>
                                <field name="deduction_date"/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="amount"/>
                                <field name="state"/>
                            </tree>
                        </field>
                        <group>
                            <group>

                            </group>
                            <group>
                                <field name="salary_advance" string="Total Salary Advance"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!--        inherit journal-->
        <!-- Inherit Form View to Modify it -->
        <record id="id_account_journal_inherit_form" model="ir.ui.view">
            <field name="name">id account journal inherit form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='type']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="is_loan"/>
                    <field name="is_salary_advance"/>
                    <field name="account_ids" invisible="is_loan != True and is_salary_advance != True" required="is_loan == True or is_salary_advance == True"/>
                    <field name="account_idd" invisible="is_loan != True and is_salary_advance != True" required="is_loan == True or is_salary_advance == True"/>
                </xpath>

            </field>
        </record>
    </data>

</odoo>

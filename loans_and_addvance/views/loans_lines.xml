            <field name="arch" type="xml">
                <tree string="Loans Lines Tree">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <record id="id_loans_lines_search" model="ir.ui.view">
            <field name="name">Loans Lines Search</field>
            <field name="model">loans.line</field>
            <field name="arch" type="xml">
                <search string="Loans Lines Search">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="employee_id"/>
                </search>
            </field>
        </record>
        <record id="id_loans_lines_action" model="ir.actions.act_window">
            <field name="name">Loans Lines</field>

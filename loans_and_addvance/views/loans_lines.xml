            <field name="res_model">loans.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <menuitem id="id_loans_lines_menu" name="Loans Lines" parent="menu_loans__action" action="id_loans_lines_action"
                  sequence="3"/>
    </data>
</odoo>
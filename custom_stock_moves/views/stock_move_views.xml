<odoo>
    <record id="stock.stock_move_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('base.group_no_one'))]"/>
    </record>

    <record id="view_stock_move_pivot_inherit" model="ir.ui.view">
        <field name="name">stock.move.pivot.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="inside">
                <field name="total_price" type="measure" sum="Total Price"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.pivot.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="product_uom_category_id" sum="Category"/>
            </xpath>
        </field>
    </record>
</odoo>
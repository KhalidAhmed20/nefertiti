<odoo>
  <data>
    <record id="inherit_view_id_hr_payroll_view_hr_payslip_form" model="ir.ui.view">
     <field name="model">hr.payslip</field>
     <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
     <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <field name="hour_wage" />
      </xpath>
     </field>
   </record>

   <record id="hr_payroll_view_hr_payslip_form_inherit" model="ir.ui.view">
     <field name="model">hr.payslip</field>
     <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
     <field name="arch" type="xml">
      <xpath expr="//tree//field[@name='quantity']" position="after">
          <field name="no_of_hours" />
         
      </xpath>
       
     </field>
   </record>

  
  </data>
</odoo>
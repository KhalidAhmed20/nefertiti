<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="id_purchase_order_inh" model="ir.ui.view">
            <field name="name">purchase order inh</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="type"/>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="after">
                    <button string="Shipped" name="get_shipped" states="purchase,done" type="object"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="id_product_category_inh" model="ir.ui.view">
            <field name="name">product category inh</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="category_code"/>
                    <field name="sequence" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="id_product_product_inh" model="ir.ui.view">
            <field name="name">product product inh</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="id_product_template_inh" model="ir.ui.view">
            <field name="name">product product inh</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="id_purchase_order_inh" model="ir.ui.view">
            <field name="name">purchase order inh</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="type"/>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="after">
                    <button string="Shipped" name="get_shipped" states="purchase,done" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|',('type', '=', False),('state', '=', 'shipped')]}"/>
                </xpath>
            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="id_sale_order_inh_form" model="ir.ui.view">
            <field name="name">sale order inh form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="type"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button string="Shipped" name="get_shipped" states="sale,done" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|',('type', '=', False),('state', '=', 'shipped')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
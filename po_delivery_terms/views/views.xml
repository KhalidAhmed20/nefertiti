<odoo>
  <data>
      <record id="inherit_purchase_order_form_po_delivery_terms" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_ref']" position="after">
              <field name="delivery_terms_id" />
          </xpath>
          
        </field>
      </record>

        <record id="delivery_terms_view_form" model="ir.ui.view">
          <field name="name">delivery_terms_view_form</field>
          <field name="model">delivery.terms</field>
          <field name="arch" type="xml">
            <form string="">
              <sheet>
                <group>
                  <field name="delivery_terms_name" />
                </group>
              </sheet>
            </form>
          </field>
        </record>

          <record id="delivery_terms_action" model="ir.actions.act_window">
            <field name="name">Delivery Terms</field>
            <field name="res_model">delivery.terms</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
       
          </record> 
 
          <menuitem
            id="delivery_terms_menu"
            name="Delivery Terms"
            action="delivery_terms_action"
            groups="base.group_user"
            parent="purchase.menu_purchase_root"
            sequence="10"/>
     
  </data>
</odoo>